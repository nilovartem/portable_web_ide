<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/design_default_color_primary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_gravity="bottom" android:visibility="gone">


    <Button
        android:id="@+id/move_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Переместить сюда"
        android:layout_gravity="left"></Button>
    <Button
        android:id="@+id/cancel_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отмена"
        android:layout_gravity="right"></Button>

</LinearLayout>